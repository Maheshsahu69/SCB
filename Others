it("calls `HardStop` when `postAditionalData` API fails", async () => {
  jest.spyOn(global, "postAditionalData").mockRejectedValue(new Error("API Failure"));

  render(<Provider store={store}><Fields /></Provider>);

  fireEvent.submit(screen.getByRole("form"));

  await waitFor(() => {
    expect(global.HardStop).toHaveBeenCalled();
  });
});
